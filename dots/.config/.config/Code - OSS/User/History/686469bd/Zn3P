alt + Return
	alacritty

ctrl + Return
	code

alt + space
	rofi -show combi

Super_L + space
	rofi -show filebrowser

# close and kill
alt + {_,shift + }w
	bspc node -{c,k}

# reload
alt + Escape
	pkill -USR1 -x sxhkd

# backlighting
alt + F8
	xbacklight -inc 3

alt + F7
	xbacklight -dec 3

#restart bspwm
ctrl + alt + {q,r}
	bspc {quit, wm -r}

#focus/send to desktop
alt + {_,shift }{1-9,0}
	bspc {desktop -f, node -d} '^{1-9,10}'

